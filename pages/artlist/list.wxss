/* pages/artlist/list.wxss */
.itemList{
  display: flex;
  height: 100%;
  width: 100%;
  padding: 20rpx ;
  box-sizing: border-box;
  flex-direction: column;
  background-image: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}
.artItem:first-child{
  margin-top: 0;
}
.artItem{
  color: #666666;
  width: 100%;
  height: 200rpx;
  background-color:white; 
  margin-top: 20rpx;
  display: flex;
  box-sizing: border-box;
  border-radius:20rpx;
}

.info{
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}
.title{
  width:100%;
  margin-bottom: 10rpx;
}
.date{
  width: 100%;
  text-align: right;
}